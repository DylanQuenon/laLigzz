{% extends "admin/base.html.twig" %}

{% block title %}Modification de l'image de {{ teamName }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Modification de l'image de {{ teamName }}</h1>
          
        <a href="{{ path('admin_teams_index') }}" class="btn btn-secondary my-3">Retour</a>
        {{ form_start(myForm) }}
        <div class="row">
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">Corriger l'image {{ imageType }}</h4>
                    </div>
                    <div class="card-body">
                        {{ form_row(myForm.newPicture) }}
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check"></i>
                            Enregistrer les Modifications
                        </button>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(myForm) }}
    </div>
{% endblock %}
