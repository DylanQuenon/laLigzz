{% extends 'base.html.twig' %}

{% block title %}Supprimer le compte{% endblock %}

{% block body %}
<div class="slide d-flex  justify-content-center align-items-center min-vh-100">
    <div class="form-container bg-light p-5 rounded shadow">
        <h1 class="display-xs hero text-dark mb-4">Supprimer le compte</h1>
        <p class="text-lg text-center text-muted mb-4">Êtes-vous sûr de vouloir supprimer votre compte?</p>
        {{ form_start(myForm) }}
            <div class="form-group mb-3 text-lg hero">
                {{ form_label(myForm.email, 'Adresse e-mail', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(myForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group mb-4 text-lg hero">
                {{ form_label(myForm.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(myForm.password, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group d-flex justify-content-between text-lg hero">
                <button type="submit" class="btn btn-danger">Oui, supprimer mon compte</button>
                <a href="{{ path('account_index') }}" class="btn btn-secondary">Annuler</a>
            </div>
        {{ form_end(myForm) }}
    </div>
</div>
{% endblock %}
