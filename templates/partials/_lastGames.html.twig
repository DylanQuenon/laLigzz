{% block stylesheets %}
	{{encore_entry_link_tags('lastGamesStyle')}}
{% endblock %}
<div class="wrapper spacing-container">
	<div class="d-flex justify-content-center">
		<h3 class="display-lg text-center text-uppercase stratos d-flex justify-content-center col-md-6"data-aos="zoom-in" data-aos-duration="700" data-aos-anchor-placement="top-center" data-aos-delay="100">
			Decouvrez les derniers matchs de 
			la liga
		</h3>
	</div>
    <div class="row">
        {% for games in lastMatches %}
        <div class="col-md-5" data-aos="flip-left" data-aos-duration="700" data-aos-anchor-placement="top-center" data-aos-delay="{{loop.index}}00">
            {% include "partials/_cardMatches.html.twig" %} 
        </div>
        {% endfor %}
    </div>
    <div class="d-flex justify-content-center"data-aos="fade-up-right" data-aos-duration="700"  >
        {% include "partials/_buttonLink.html.twig" with { 'url': path('matches_index'), text: 'Voir tous les matchs' } %}
    
    </div>
</div>
