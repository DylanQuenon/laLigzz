{% block stylesheets %}
    {{ encore_entry_link_tags('matchStyle') }}
{% endblock %}

<div class="cardsMatches">
	<div class="rowTeams d-flex">
		<a href="{{path('teams_show', {'slug':games.homeTeam.slug}) }}" class="teams">
            
			<img src="{{'/uploads/' ~ games.homeTeam.logo}}" alt="">
			<p class="text-md stratos ">{{ games.homeTeam.name }}</p>
		</a>
		<div class="blockCenter">
			<img src="/images/logoLaliga.png" alt="Logo de La Liga">
			<p class="display-md stratos bold">VS</p>
			<div class="d-flex justify-content-center gap-2 flex-column align-items-center">
				<i class="fa-solid fa-calendar-days"></i>
				<p class="text-md hero">{{ games.date|date('d - m - Y') }}</p>
			</div>
		</div>
		<a href="{{path('teams_show', {'slug':games.awayTeam.slug}) }}" class="teams text-decoration-none">
			<img src="{{'/uploads/' ~ games.awayTeam.logo}}" alt="">
			<p class="text-md stratos">{{ games.awayTeam.name }}</p>
		</a>
	</div>
	<div class="rowScore d-flex">
		<p class="display-2xl stratos score">{{ games.homeTeamGoals }}</p>
		<div class="rect"></div>
		<p class="display-2xl stratos score">{{ games.awayTeamGoals }}</p>
	</div>
