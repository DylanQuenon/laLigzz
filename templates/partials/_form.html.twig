{# templates/form/_form.html.twig #}
{% block stylesheets %}
    {{ encore_entry_link_tags('formStyle') }}
{% endblock %}

<div class="slide" id="{{ slideId }}">
    <div class="wrapper">
        <div class="form-container">
           {% if actions is defined %}
           <div class="d-flex flex-wrap">
                    {% for action in actions %}
                    <div class="m-3">{{ action.text | raw }}</div>
                    {% endfor %}
           </div>
                {% endif %}
            <div class="form-content">
                <h1 class="display-xs hero">{{ title }}</h1>
                {% if imagePath is defined %}
                    <img src="{{ imagePath }}" alt="Image Ã  modifier" width="400px">
                {% endif %}
                {{ form_start(form) }}
                <div class="row">
                    {% for field in fields %}
                       {# Condition pour l'image optionnelle #}
                        <div class="col-md-6 mb-3">
                            {{ form_row(field) }}
                        </div>
                    {% endfor %}
                    {% if textarea is defined %}
                        <div class="col-12 mb-3">
                            {{ form_row(textarea) }}
                        </div>
                    {% endif %}
                </div>
                <button type="submit" class="btn btn-primary my-2">{{ buttonText }}</button>
                {{ form_end(form) }}
                {% if sublinks is defined %}
                    {% for sublink in sublinks %}
                    <div>{{ sublink.text | raw }}</div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
</div>

{# Code de suppression #}
{% if deleteModal is defined %}
    {{ deleteModal | raw }}
{% endif %}
