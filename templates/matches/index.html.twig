{% extends 'base.html.twig' %}

{% block title %}Matchs{% endblock %}


{% block body %}
    <div class="slide" id="teamsPage">
        <div class="wrapper">
            <div class="container_teamsPage">
                <div class="title">
                    <h2 class="display-md kizard col-md-3">Matchs</h2>
                </div>
                {% for matchDay, matches in groupedMatches %}
                    <div class="match-day">
                        <h3 class="text-xl hero mb-2">Journée {{ matchDay }}</h3>
                        <div class="row justify-content-center">
                            {% for games in matches %}
                            <div class="col-md-4 my-4">
                            {% include "partials/_cardMatches.html.twig" %}
                            
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
                <div class="pagination">
                    {{ pagination.display() }}
                    {# Appelle le display de la pagination (configuré dans service yaml)#}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
